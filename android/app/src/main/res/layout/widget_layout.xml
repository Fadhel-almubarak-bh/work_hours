<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:orientation="vertical"
    android:padding="12dp">

    <!-- Header with Navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <ImageButton
            android:id="@+id/widget_button_previous"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_previous"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:tint="@color/widget_text_white"
            android:contentDescription="Previous" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/widget_button_settings"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_settings"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:tint="@color/widget_text_white"
            android:contentDescription="Settings" />

        <ImageButton
            android:id="@+id/widget_button_next"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_next"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:tint="@color/widget_text_white"
            android:contentDescription="Next" />

        <ImageButton
            android:id="@+id/widget_button_back"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_previous"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:tint="@color/widget_text_white"
            android:visibility="gone"
            android:contentDescription="Back" />
    </LinearLayout>

    <!-- Main Content -->
    <LinearLayout
        android:id="@+id/widget_main_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Clock In/Out Status -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/widget_semi_transparent"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/widget_clock_in_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/widget_text_white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="In: --:--" />

            <TextView
                android:id="@+id/widget_clock_out_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/widget_text_white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Out: --:--" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/widget_duration_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/widget_text_white"
                android:textSize="16sp"
                android:text="Duration: 0h 0m" />

            <TextView
                android:id="@+id/widget_overtime_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/widget_text_white"
                android:textSize="16sp"
                android:text="Overtime: 0h 0m" />
        </LinearLayout>
    </LinearLayout>

    <!-- Summary Content -->
    <LinearLayout
        android:id="@+id/widget_summary_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/widget_semi_transparent"
            android:padding="16dp">

            <TextView
                android:id="@+id/widget_monthly_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/widget_text_white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Monthly Hours: 0h 0m" />

            <TextView
                android:id="@+id/widget_monthly_overtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/widget_text_white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Monthly Overtime: 0h 0m" />

            <TextView
                android:id="@+id/widget_work_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/widget_text_white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Work Days: 0" />
        </LinearLayout>
    </LinearLayout>

    <!-- Settings Content -->
    <LinearLayout
        android:id="@+id/widget_settings_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/widget_semi_transparent"
            android:padding="16dp">

            <!-- Theme Selection -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/widget_text_white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Theme" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginVertical="8dp">

                <ImageButton
                    android:id="@+id/widget_theme_previous"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_previous"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:tint="@color/widget_text_white"
                    android:contentDescription="Previous theme" />

                <TextView
                    android:id="@+id/widget_theme_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/widget_text_white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginHorizontal="16dp"
                    android:text="Black" />

                <ImageButton
                    android:id="@+id/widget_theme_next"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_next"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:tint="@color/widget_text_white"
                    android:contentDescription="Next theme" />
            </LinearLayout>

            <!-- Transparency Controls -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/widget_text_white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:text="Transparency" />

            <TextView
                android:id="@+id/widget_transparency_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/widget_text_white"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginVertical="8dp"
                android:text="100%" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/widget_transparency_decrease"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_previous"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:tint="@color/widget_text_white"
                    android:contentDescription="Decrease transparency" />

                <ImageButton
                    android:id="@+id/widget_transparency_increase"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_next"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:tint="@color/widget_text_white"
                    android:contentDescription="Increase transparency" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Clock In/Out Button -->
    <Button
        android:id="@+id/widget_clock_button"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Clock In"
        android:textColor="@color/widget_text_white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:backgroundTint="@color/widget_button_blue"
        android:layout_marginTop="12dp" />
</LinearLayout> 