<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white">

    <!-- Main content area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/widget_padding_medium">

        <!-- Top bar -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="6dp"
            android:paddingStart="6dp"
            android:paddingEnd="6dp">

            <!-- Page Title -->
            <TextView
                android:id="@+id/tv_page_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text="Home Screen"
                android:textColor="@android:color/black"
                android:textSize="@dimen/widget_text_size_large_medium"
                android:textStyle="bold" />

            <!-- Navigation buttons -->
            <LinearLayout
                android:id="@+id/top_left_buttons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true">

                <ImageButton
                    android:id="@+id/btn_previous"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:src="@drawable/previous_button"
                    android:scaleType="centerInside" />

                <ImageButton
                    android:id="@+id/btn_next"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:src="@drawable/next_button"
                    android:scaleType="centerInside" />

            </LinearLayout>

            <!-- Settings button -->
            <ImageButton
                android:id="@+id/btn_settings"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_settings"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true" />

        </RelativeLayout>

        <!-- Home Screen Content -->
        <LinearLayout
            android:id="@+id/home_screen_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Clock In/Out Times -->
            <TextView
                android:id="@+id/tv_clock_in_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Clock In: --:--"
                android:textSize="@dimen/widget_text_size_medium"
                android:textColor="@android:color/darker_gray"
                android:gravity="center"
                android:layout_marginBottom="3dp"
                android:background="@android:color/transparent" />

            <TextView
                android:id="@+id/tv_clock_out_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Clock Out: --:--"
                android:textSize="@dimen/widget_text_size_medium"
                android:textColor="@android:color/darker_gray"
                android:gravity="center"
                android:layout_marginBottom="6dp"
                android:background="@android:color/transparent" />

            <!-- Clock In/Out Button -->
            <Button
                android:id="@+id/btn_clock_in_out"
                android:layout_width="match_parent"
                android:layout_height="@dimen/widget_button_height_medium"
                android:text="Clock In/Out"
                android:textSize="@dimen/widget_text_size_medium_medium"
                android:textStyle="bold"
                android:background="@android:color/holo_blue_dark"
                android:textColor="@android:color/white"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6dp"
                android:clickable="true"
                android:focusable="true" />

            <!-- Loading label -->
            <TextView
                android:id="@+id/tv_loading_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading..."
                android:textSize="@dimen/widget_text_size_medium"
                android:textColor="@android:color/darker_gray"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:visibility="gone"
                android:layout_marginTop="3dp" />

            <!-- Remaining/Overtime Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="6dp">
                
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Remaining"
                        android:textSize="@dimen/widget_text_size_medium"
                        android:textColor="@android:color/darker_gray"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/tv_remaining_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--h --m"
                        android:textSize="@dimen/widget_text_size_medium"
                        android:textColor="@android:color/darker_gray" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Overtime"
                        android:textSize="@dimen/widget_text_size_medium"
                        android:textColor="@android:color/darker_gray"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/tv_overtime_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--h --m"
                        android:textSize="@dimen/widget_text_size_medium"
                        android:textColor="@android:color/darker_gray" />
                </LinearLayout>
            </LinearLayout>

            <!-- Overtime Gauge -->
            <FrameLayout
                android:id="@+id/overtime_gauge_container"
                android:layout_width="@dimen/widget_gauge_size_medium"
                android:layout_height="@dimen/widget_gauge_size_medium"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6dp"
                android:background="@drawable/gauge_container_background">

                <!-- Background Circle -->
                <ImageView
                    android:id="@+id/gauge_background_circle"
                    android:layout_width="@dimen/widget_gauge_size_medium"
                    android:layout_height="@dimen/widget_gauge_size_medium"
                    android:layout_gravity="center"
                    android:src="@drawable/gauge_background_circle"
                    android:scaleType="fitXY" />

                <!-- Progress Arc Container -->
                <FrameLayout
                    android:id="@+id/gauge_progress_container"
                    android:layout_width="@dimen/widget_gauge_size_medium"
                    android:layout_height="@dimen/widget_gauge_size_medium"
                    android:layout_gravity="center">

                    <!-- Progress Arcs -->
                    <ImageView
                        android:id="@+id/gauge_progress_gray"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/gauge_progress_arc_gray"
                        android:scaleType="fitXY"
                        android:visibility="visible" />

                    <ImageView
                        android:id="@+id/gauge_progress_green"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/gauge_progress_arc_green"
                        android:scaleType="fitXY"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/gauge_progress_red"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/gauge_progress_arc_red"
                        android:scaleType="fitXY"
                        android:visibility="gone" />

                </FrameLayout>

                <!-- Center Content -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/gauge_center_background"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/gauge_main_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0h"
                        android:textSize="@dimen/widget_text_size_large_medium"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/gauge_progress_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0h / 0h"
                        android:textSize="@dimen/widget_text_size_medium"
                        android:textColor="@android:color/darker_gray"
                        android:gravity="center"
                        android:layout_marginTop="2dp" />

                </LinearLayout>

            </FrameLayout>

            <!-- Earnings Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="6dp">
                
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Today"
                        android:textSize="@dimen/widget_text_size_medium"
                        android:textColor="@android:color/darker_gray"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/tv_today_earnings_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$0.00"
                        android:textSize="@dimen/widget_text_size_medium"
                        android:textColor="@android:color/darker_gray" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Month"
                        android:textSize="@dimen/widget_text_size_medium"
                        android:textColor="@android:color/darker_gray"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/tv_monthly_earnings_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$0.00"
                        android:textSize="@dimen/widget_text_size_medium"
                        android:textColor="@android:color/darker_gray" />
                </LinearLayout>
            </LinearLayout>

            <!-- Calendar -->
            <LinearLayout
                android:id="@+id/mini_calendar_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="6dp">

                <!-- Month/Year Header -->
                <TextView
                    android:id="@+id/tv_calendar_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="July 2024"
                    android:textSize="@dimen/widget_text_size_medium_medium"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:layout_marginBottom="3dp" />

                <!-- Weekday Headers -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="M" android:textSize="@dimen/widget_calendar_text_size_medium" android:textColor="@android:color/darker_gray" android:gravity="center" />
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="T" android:textSize="@dimen/widget_calendar_text_size_medium" android:textColor="@android:color/darker_gray" android:gravity="center" />
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="W" android:textSize="@dimen/widget_calendar_text_size_medium" android:textColor="@android:color/darker_gray" android:gravity="center" />
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="T" android:textSize="@dimen/widget_calendar_text_size_medium" android:textColor="@android:color/darker_gray" android:gravity="center" />
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="F" android:textSize="@dimen/widget_calendar_text_size_medium" android:textColor="@android:color/darker_gray" android:gravity="center" />
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="S" android:textSize="@dimen/widget_calendar_text_size_medium" android:textColor="@android:color/darker_gray" android:gravity="center" />
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="S" android:textSize="@dimen/widget_calendar_text_size_medium" android:textColor="@android:color/darker_gray" android:gravity="center" />
                </LinearLayout>

                <!-- Calendar Days - 4 rows for medium -->
                <LinearLayout android:id="@+id/calendar_row_1" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center" android:layout_marginTop="2dp">
                    <TextView android:id="@+id/day_1" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="1" android:textSize="@dimen/widget_calendar_text_size_medium" android:gravity="center" />
                    <TextView android:id="@+id/day_2" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="2" android:textSize="@dimen/widget_calendar_text_size_medium" android:gravity="center" />
                    <TextView android:id="@+id/day_3" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="3" android:textSize="@dimen/widget_calendar_text_size_medium" android:gravity="center" />
                    <TextView android:id="@+id/day_4" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="4" android:textSize="@dimen/widget_calendar_text_size_medium" android:gravity="center" />
                    <TextView android:id="@+id/day_5" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="5" android:textSize="@dimen/widget_calendar_text_size_medium" android:gravity="center" />
                    <TextView android:id="@+id/day_6" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="6" android:textSize="@dimen/widget_calendar_text_size_medium" android:gravity="center" />
                    <TextView android:id="@+id/day_7" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="7" android:textSize="@dimen/widget_calendar_text_size_medium" android:gravity="center" />
                </LinearLayout>

                <LinearLayout android:id="@+id/calendar_row_2" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center" android:layout_marginTop="2dp">
                    <TextView android:id="@+id/day_8" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="8" android:textSize="@dimen/widget_calendar_text_size_medium" android:gravity="center" />
                    <TextView android:id="@+id/day_9" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="9" android:textSize="@dimen/widget_calendar_text_size_medium" android:gravity="center" />
                    <TextView android:id="@+id/day_10" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="10" android:textSize="@dimen/widget_calendar_text_size_medium" android:gravity="center" />
                    <TextView android:id="@+id/day_11" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="11" android:textSize="@dimen/widget_calendar_text_size_medium" android:gravity="center" />
                    <TextView android:id="@+id/day_12" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="12" android:textSize="@dimen/widget_calendar_text_size_medium" android:gravity="center" />
                    <TextView android:id="@+id/day_13" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="13" android:textSize="@dimen/widget_calendar_text_size_medium" android:gravity="center" />
                    <TextView android:id="@+id/day_14" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="14" android:textSize="@dimen/widget_calendar_text_size_medium" android:gravity="center" />
                </LinearLayout>

                <LinearLayout android:id="@+id/calendar_row_3" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center" android:layout_marginTop="2dp">
                    <TextView android:id="@+id/day_15" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="15" android:textSize="@dimen/widget_calendar_text_size_medium" android:gravity="center" />
                    <TextView android:id="@+id/day_16" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="16" android:textSize="@dimen/widget_calendar_text_size_medium" android:gravity="center" />
                    <TextView android:id="@+id/day_17" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="17" android:textSize="@dimen/widget_calendar_text_size_medium" android:gravity="center" />
                    <TextView android:id="@+id/day_18" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="18" android:textSize="@dimen/widget_calendar_text_size_medium" android:gravity="center" />
                    <TextView android:id="@+id/day_19" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="19" android:textSize="@dimen/widget_calendar_text_size_medium" android:gravity="center" />
                    <TextView android:id="@+id/day_20" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="20" android:textSize="@dimen/widget_calendar_text_size_medium" android:gravity="center" />
                    <TextView android:id="@+id/day_21" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="21" android:textSize="@dimen/widget_calendar_text_size_medium" android:gravity="center" />
                </LinearLayout>

                <LinearLayout android:id="@+id/calendar_row_4" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center" android:layout_marginTop="2dp">
                    <TextView android:id="@+id/day_22" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="22" android:textSize="@dimen/widget_calendar_text_size_medium" android:gravity="center" />
                    <TextView android:id="@+id/day_23" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="23" android:textSize="@dimen/widget_calendar_text_size_medium" android:gravity="center" />
                    <TextView android:id="@+id/day_24" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="24" android:textSize="@dimen/widget_calendar_text_size_medium" android:gravity="center" />
                    <TextView android:id="@+id/day_25" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="25" android:textSize="@dimen/widget_calendar_text_size_medium" android:gravity="center" />
                    <TextView android:id="@+id/day_26" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="26" android:textSize="@dimen/widget_calendar_text_size_medium" android:gravity="center" />
                    <TextView android:id="@+id/day_27" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="27" android:textSize="@dimen/widget_calendar_text_size_medium" android:gravity="center" />
                    <TextView android:id="@+id/day_28" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="28" android:textSize="@dimen/widget_calendar_text_size_medium" android:gravity="center" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <!-- Settings Content -->
        <LinearLayout
            android:id="@+id/settings_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone">

            <!-- Settings UI -->
            <TextView
                android:id="@+id/tv_transparency_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Transparency: 100%"
                android:textSize="@dimen/widget_text_size_medium_medium"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="6dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="12dp">

                <Button android:id="@+id/btn_transparency_25" android:layout_width="50dp" android:layout_height="32dp" android:text="25%" android:textSize="@dimen/widget_text_size_medium" android:layout_margin="3dp" />
                <Button android:id="@+id/btn_transparency_50" android:layout_width="50dp" android:layout_height="32dp" android:text="50%" android:textSize="@dimen/widget_text_size_medium" android:layout_margin="3dp" />
                <Button android:id="@+id/btn_transparency_75" android:layout_width="50dp" android:layout_height="32dp" android:text="75%" android:textSize="@dimen/widget_text_size_medium" android:layout_margin="3dp" />
                <Button android:id="@+id/btn_transparency_100" android:layout_width="50dp" android:layout_height="32dp" android:text="100%" android:textSize="@dimen/widget_text_size_medium" android:layout_margin="3dp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Background Color"
                android:textSize="@dimen/widget_text_size_medium_medium"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="6dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button android:id="@+id/btn_color_white" android:layout_width="32dp" android:layout_height="32dp" android:background="@android:color/white" android:layout_margin="3dp" />
                <Button android:id="@+id/btn_color_black" android:layout_width="32dp" android:layout_height="32dp" android:background="@android:color/black" android:layout_margin="3dp" />
                <Button android:id="@+id/btn_color_blue" android:layout_width="32dp" android:layout_height="32dp" android:background="@android:color/holo_blue_dark" android:layout_margin="3dp" />
                <Button android:id="@+id/btn_color_green" android:layout_width="32dp" android:layout_height="32dp" android:background="@android:color/holo_green_dark" android:layout_margin="3dp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>